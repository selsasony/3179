{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 760,
  "height": 450,
  "background": "#F5E9D9",
  "title":"Prevalence of Morbidity in Different Age Groups across Australia",
  "data": {
    "url": "https://raw.githubusercontent.com/selsasony/3179/refs/heads/main/data/stacked_bar_chart.csv"
  },
  "params": [
    {"name": "highlight", "select": {"type": "point", "on": "mouseover"}},
    {"name": "select", "select": "point"}
  ],
  "mark": {
    "type": "bar",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "Total",
      "type": "quantitative",
      "title": "Total Deaths"
    },
    "color": {
      "field": "Age Group",
      "type": "nominal",
      "title": "Age Group",
      "scale": {
        "domain": [
          "Under 1 year",
          "1-14 years",
          "15-24 years",
          "25-34 years",
          "35-44 years",
          "45-54 years",
          "55-64 years",
          "65-74 years",
          "75-84 years",
          "85-94 years",
          "95 years and over"
        ],
        "range": [
          "#A8BFA3",
          "#C2A68A",
          "#9B8C77",
          "#BFAE9D",
          "#8C7A60",
          "#C2B9A1",
          "#A86A4C",
          "#D0C6B4",
          "#7B9A87",
          "#9D7A6D",
          "#B8B2A1"
        ]
      },
      "legend": {
        "labelFontSize": 13,  
        "titleFontSize": 13    
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Age Group", "type": "nominal", "title": "Age Group"},
      {"field": "Total", "type": "quantitative", "title": "Total Deaths"}
    ],
    "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {"param": "select", "empty": false, "value": 2},
        {"param": "highlight", "empty": false, "value": 1}
      ],
      "value": 0
    }
  },
  "config": {
      "view": {
          "stroke": null  
      }
  }
}
