{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 550,
    "width": 600,
    "background": "#F5E9D9",
    "data": {
      "url": "https://raw.githubusercontent.com/selsasony/3179/refs/heads/main/data/donut_chart_states.csv"
    },
    "mark": {
      "type": "arc",
      "innerRadius": 150,
      "stroke": "white",
      "cursor": "pointer"
    },
    "encoding": {
      "theta": {
        "field": "Number of Deaths",
        "type": "quantitative",
        "stack": true
      },
      "color": {
        "field": "Areas of Malignant Neoplasms",
        "type": "nominal",
        "legend": {"orient": "left", "labelLimit": 300},
        "scale": {
          "domain": [
            "Oesophagus",
            "Stomach",
            "Small Intestine",
            "Colon",
            "Rectosigmoid Junction",
            "Rectum",
            "Anus and Anal Canal",
            "Liver and Intrahepatic Bile Ducts",
            "Gallbladder",
            "Other and Unspecified Parts of Biliary Tract",
            "Pancreas",
            "Other Digestive Organs"
          ],
          "range": [
            "#D9A47A",  
            "#B26D45",  
            "#C97C5D",  
            "#A6856A",  
            "#E2B266",  
            "#B77F80",  
            "#D4A15C", 
            "#927B6B",  
            "#C98A74", 
            "#A67F5F",  
            "#E3A484", 
            "#BF9B6D"  
        ]

        }
      },
      "tooltip": [
        {"field": "Areas of Malignant Neoplasms", "type": "nominal"},
        {"field": "Number of Deaths", "type": "quantitative", "format": ","},
        {"field": "Year", "type": "ordinal"},
        {"field": "States", "type": "nominal"}
      ],
      "order": {
        "field": "Number of Deaths",
        "type": "quantitative",
        "sort": "descending"
      }
    },
    "params": [
      {
        "name": "States",
        "value": "Australia",
        "bind": {
          "input": "select",
          "options": [
            "Australia",
            "New South Wales",
            "Victoria",
            "Queensland",
            "South Australia",
            "Western Australia",
            "Tasmania",
            "Northern Territory",
            "Australian Capital Territory"
          ],
          "labels": [
            "Australia",
            "New South Wales",
            "Victoria",
            "Queensland",
            "South Australia",
            "Western Australia",
            "Tasmania",
            "Northern Territory",
            "Australian Capital Territory"
          ],
          "name": "States Selection: "
        }
      },
      {
        "name": "Year",
        "value": 2012,
        "bind": {
          "input": "range",
          "min": 2012,
          "max": 2022,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.States == 'States' || datum.States == States"},
      {"filter": "datum.Year == Year"}
    ],
    "config": {
        "view": {
        "stroke": null  
    }
  }
}